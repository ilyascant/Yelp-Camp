<%- layout("layouts/boilerplate") %><%- include("../partials/flash") %>

<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-6 offset-md-3 m-auto">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1568494354623-3d36e8d537b4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <form action="/login" method="POST" class="validated-form" novalidate>
            <h5 class="card-title">Login</h5>
            <div class="mb-3">
              <label class="form-laber mb-2" for="username"
                >Enter Username</label
              >
              <input
                class="form-control"
                type="text"
                name="username"
                id="username"
                placeholder="Username"
                autofocus
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-laber mb-2" for="password"
                >Enter Password</label
              >
              <input
                class="form-control"
                type="password"
                name="password"
                id="password"
                placeholder="Password"
                required
              />
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-success">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
